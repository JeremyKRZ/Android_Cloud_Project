<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.FirebaseInscriptionActivity">

    <TextView
        android:id="@+id/FirebaseInscriptionActivityTextViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inscrivez-vous Ã  Firebase"
        android:layout_marginTop="200dp"
        android:textSize="24sp"
        android:textColor="@color/text_color"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/FirebaseInscriptionActivityEditTextEmail"
        />

    <EditText
        android:id="@+id/FirebaseInscriptionActivityEditTextEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="12"
        android:hint="Email"
        android:layout_marginTop="50dp"
        android:inputType="textEmailAddress"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FirebaseInscriptionActivityTextViewTitle"
        app:layout_constraintBottom_toTopOf="@id/FirebaseInscriptionActivityEditTextPassword"/>

    <EditText
        android:id="@+id/FirebaseInscriptionActivityEditTextPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="12"
        android:hint="Mot de passe"
        android:inputType="textPassword"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FirebaseInscriptionActivityEditTextEmail"
        />
    <EditText
        android:id="@+id/FirebaseInscriptionActivityEditTextConfirmPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="12"
        android:hint="Confirmer le mot de passe"
        android:inputType="textPassword"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FirebaseInscriptionActivityEditTextPassword"
        />
    <Button
        android:id="@+id/FirebaseInscriptionActivityButtonInscription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="S'inscrire"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FirebaseInscriptionActivityEditTextConfirmPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>