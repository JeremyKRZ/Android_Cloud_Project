<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.FirebaseActivity"
    android:background="@color/background_app">

    <TextView
        android:id="@+id/FirebaseActivityTextViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connectez-vous Ã  Firebase"
        android:layout_marginTop="200dp"
        android:textSize="24sp"
        android:textColor="@color/text_color"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/FirebaseActivityEditTextEmail"
        />

    <EditText
        android:id="@+id/FirebaseActivityEditTextEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="8"
        android:hint="Email"
        android:layout_marginTop="50dp"
        android:inputType="textEmailAddress"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FirebaseActivityTextViewTitle"
        app:layout_constraintBottom_toTopOf="@id/FirebaseActivityEditTextPassword"/>

    <EditText
        android:id="@+id/FirebaseActivityEditTextPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="8"
        android:hint="Mot de passe"
        android:inputType="textPassword"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FirebaseActivityEditTextEmail"
        />
    <Button
        android:id="@+id/FirebaseActivityButtonConnection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Se connecter"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FirebaseActivityEditTextPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <Button
        android:id="@+id/FirebaseActivityButtonInscription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="S'inscrire"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FirebaseActivityButtonConnection"
        />

</androidx.constraintlayout.widget.ConstraintLayout>